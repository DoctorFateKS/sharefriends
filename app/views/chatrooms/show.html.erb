<div class="container-show">
  <h1>Discussion pour l'événement: <%= @chatroom.event.title %></h1>

  <div>
    <% @messages.each do |message| %>

      <div class="message-row d-flex <%= message.user == current_user ? 'justify-content-end' : 'justify-content-start' %>">


        <div class="<%= message.user == current_user ? 'sender-style' : 'receiver-style' %>">
          <p><strong><%= message.user.first_name %> :</strong> <%= message.content %></p>
        </div>
      </div>
    <% end %>
  </div>

  <h2>Envoyer un message</h2>
  <%= form_with model: @message, url: event_chatroom_messages_path(@chatroom.event, @chatroom), local: true do |form| %>
    <div>
      <%= form.text_area :content %>
    </div>

    <div>
      <%= form.submit "Envoyer" %>
    </div>
  <% end %>
<div class="event-return-button-show">
          <%= link_to "⬅ Retour", dashboard_path, class: "event-return" %>
      </div>
  <%= link_to "Retour", dashboard_path %>
</div>
