<nav class="navbar">
  <!-- Logo cliquable à gauche -->
  <%= link_to "Sharefriends", user_signed_in? ? explore_path : root_path, class: "navbar-brand" %>

  <% if user_signed_in? %>
    <div class="nav-items">
      <!-- Mood actuel -->
      <div class="user-mood">
        😃 <strong><%= current_user.mood %></strong>
      </div>

      <!-- Lien vers le Dashboard -->
      <%= link_to dashboard_path, class: "nav-link dashboard-link" do %>
        🏠 Dashboard
        <% if current_user.accepted_events.any? %>
          <span class="badge"><%= current_user.accepted_events.count %></span>
        <% end %>
      <% end %>

      <!-- Lien vers le Profil -->
      <%= link_to edit_profile_path, class: "nav-link profile-link" do %>
        👤 Mon Profil
      <% end %>
    </div>
  <% end %>
</nav>

