<div class="fond-login">
  <div class="devise-background">
    <div class="container">
      <div class="row justify-content-center row-devise">
        <div class="col-12 col-lg-8 devise-form-login">
          <h2>Log in</h2>

          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-inputs">
              <%= f.input :email, required: false, autofocus: true, placeholder: "bob@gmail.com" %>
              <%= f.input :password, required: false, placeholder: "••••••" %>
              <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            </div>
            <div class="form-actions">
              <%= f.button :submit, "Log in", class: "cta-devise" %>
            </div>
            <%= render "devise/shared/links" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
