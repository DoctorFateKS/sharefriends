<body>
  <div class="container">
    <section class="event">
    <img src="https://static.actu.fr/uploads/2017/07/2D9A3772.jpg-Visionneuse-de-photos-Windows-960x640.jpg" alt="Ambiance de l'√©v√©nement" class="event-image">
    <div class="event-info">

      <p class="description">Lorem ipsum dolor sit amet, consectetur adipiscing elit...</p>
    </div>


     <h1><%= @event.title %></h1>
     <p> <strong>Adresse :</strong> <%= @event.address %></p>
     <p> <strong>Date :</strong> <%= @event.date.strftime("%d/%m/%Y %H:%M") %></p>
     <p> <strong>Description :</strong> <%= @event.description %></p>
     <p class="mood"> <strong>Ambiance :</strong> <%= @event.mood %></p>
     <p> <strong>Activit√© :</strong> <%= @event.activity %></p>
     <p> <strong>Max Participants :</strong> <%= @event.max_participants %></p>
    <% if user_signed_in? %>
      <% participation = current_user.participations.find_by(event: @event) %>

      <% if participation.blank? %>
        <%= button_to "S'inscrire", event_participations_path(@event), method: :post, class: "btn button" %>
      <% elsif participation.accepted? %>
        <%= link_to "üí¨ Rejoindre le Chat", event_chatroom_path(@event), class: "btn btn-primary" %>
      <% else %>
        <p>‚è≥ En attente de validation...</p>
      <% end %>
    <% end %>

    <div style="width: 25%; height: 300px;"
      data-controller="map"
      data-map-markers-value="<%= @markers.to_json %>"
      data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>

    <%= link_to "‚¨Ö Retour aux √©v√©nements", events_path, class: "btn button" %>
  </div>
</body>
