
<div class="container">
  <h1> Créer un Nouvel Événement</h1>

  <%= form_with model: @event, local: true do |form| %>
    <div class="form-group">
      <%= form.label :title, "Titre de l'événement" %>
      <%= form.text_field :title, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :description, "Description" %>
      <%= form.text_area :description, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :date, "Date et heure" %>
      <%= form.datetime_select :date, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :address, "Adresse" %>
      <%= form.text_field :address, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :mood, "Ambiance" %>
      <%= form.text_field :mood, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :activity, "Activité" %>
      <%= form.text_field :activity, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :max_participants, "Nombre maximal de participants" %>
      <%= form.number_field :max_participants, class: "form-control" %>
    </div>
  
    <div class="form-group">
      <%= cl_image_tag @event.photo.key, height: 200, width: 200, crop: :fill %>
      <%= f.input :photo, as: :file %>
  </div>

    <%= form.submit "Créer l'événement", class: "btn btn-success" %>
  <% end %>

  <%= link_to "⬅ Retour", events_path, class: "btn btn-secondary" %>
</div>
